.home_container {
  width: 750rpx;
  overflow: hidden;
}
.swiper {
  width: 750rpx;
  height: 380rpx;
}
.swiper navigator,
.swiper image {
  width: 100%;
  height: 100%;
}
.grid {
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-right: 1rpx solid #999;
  border-bottom: 1rpx solid #999;
  box-sizing: border-box;
  /* display: grid;
  grid-template-columns: 1fr, 1fr, 1fr;
  grid-template-rows: 1fr, 1fr, 1fr;
  grid-gap: 1rpx; */
}
.icon-container {
  border-left: 1rpx solid #999;
   border-top: 1rpx solid #999;
  width: 33.333333%;
  height: 33.333333%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  box-sizing: border-box;
}
.icon-container:hover {
  filter: grayscale(50%);
}
.icon-container image {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
}
.icon-container text {
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  margin-top: 20rpx;
}